<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="被检单位："
           android:textColor="#333333"
           android:textSize="14sp"
           android:id="@+id/tv_checked_unit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被检单位：被检单位被检单位被检单位被检单位被检单位"
            android:textColor="#333333"
            android:textSize="14sp"
            android:id="@+id/tv_checked_unit_content"
            android:layout_toRightOf="@+id/tv_checked_unit"
            android:layout_marginLeft="8dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/tv_export"
            android:layout_marginRight="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存时间："
            android:textColor="#666666"
            android:textSize="12sp"
            android:id="@+id/tv_date"
            android:layout_below="@+id/tv_checked_unit"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-6"
            android:textColor="#666666"
            android:textSize="12sp"
            android:id="@+id/tv_date_content"
            android:layout_below="@+id/tv_checked_unit"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/tv_export"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_export"
            android:background="@drawable/bg_export"
            android:padding="4dp"/>
    </RelativeLayout>
</LinearLayout>