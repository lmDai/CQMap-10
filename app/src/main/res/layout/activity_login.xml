<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fres="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30425a"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.zhixun.uiho.com.gissystem.ui.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/login_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="0.8"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/iv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="密码"
                android:src="@drawable/ic_login_user" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_username"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:text="yanghang"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/user_name"
                android:layout_marginTop="5dp"
                android:background="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/frameLayout1"
            android:layout_marginTop="16dp"
            android:alpha="0.8"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="密码"
                android:src="@drawable/ic_login_pwd" />

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_password"
                android:background="@android:color/transparent"
                android:hint="请输入密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="50"
                android:text="111111"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/user_password"
                android:layout_marginTop="5dp"
                android:background="@android:color/white" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout2"
            android:layout_marginTop="34dp"
            android:background="@drawable/sp_rr_2395fc"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="版权所有©️重庆地理信息中心"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
