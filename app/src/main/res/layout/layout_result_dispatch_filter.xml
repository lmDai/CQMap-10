<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text="单位名称/组织机构代码"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#F5F5F5"
        android:hint="请输入单位名称或组织机构代码"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColorHint="#BBBBBB"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="报件编号"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_case_code"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#F5F5F5"
        android:hint="请输入报件编号"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColorHint="#BBBBBB"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="图幅号/数据编号"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_data_code"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#F5F5F5"
        android:hint="请输入图幅号或数据编号"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColorHint="#BBBBBB"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="分发时间"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayoutLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/calendar1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#D1D1D1"
                app:srcCompat="@mipmap/clender" />

            <TextView
                android:id="@+id/calendar1_content"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_toRightOf="@+id/calendar1"
                android:background="#F5F5F5"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="2016-11-25" />

        </RelativeLayout>

        <TextView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/circle_to"
            android:gravity="center"
            android:text="至"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relativeLayoutRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/calendar2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#D1D1D1"
                app:srcCompat="@mipmap/clender" />

            <TextView
                android:id="@+id/calendar2_content"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_toRightOf="@+id/calendar2"
                android:background="#F5F5F5"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="2016-11-25" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acb_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sp_rr_2395fc"
        android:text="查询"
        android:textColor="#FFF"
        android:textSize="16sp" />

</LinearLayout>